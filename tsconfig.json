{
  "compilerOptions": {
    "sourceMap": true,
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["es2020"],
    "target": "es2020",
    "moduleResolution": "node",
    "esModuleInterop": true,

    "typeRoots": [
      "./node_modules/@types",
      "./src/Common/infrastructure/typings"
    ],
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "**/*.js"
  ],
  "exclude": [
    "node_modules",
    "coverage",
    "tests/*.ts",
    "_site"
  ]
}
